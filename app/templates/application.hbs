{{#let (concat "slides/slide-" this.slide) as |Slide|}}
  <Slide
    @speaker={{this.speaker}}
    class="
      {{concat "slide-" this.slide}}
      {{if this.speaker "hidden md:flex w-3/4" "flex"}}
    " as |slide|>

    {{#if this.speaker}}
      <AdjacentSlides />
      <SpeakerControls @notes={{slide.notes}} />
    {{/if}}
  </Slide>
{{/let}}

{{#unless this.speaker}}
  <FullScreen />
{{/unless}}

{{outlet}}
